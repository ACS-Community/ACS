#! /bin/bash
CLASSPATH=`vltMakeJavaClasspath`
IP=`host $HOST | awk '{print $4}'`

common_options="-variable IP=$IP -variable HOST=$HOST"
manual_options="-variable HOME=. -systemcfg ./qftestJUI.cfg"
moreno_options="-variable HOME=$HOME -systemcfg $HOME/qftestJUI.cfg -libpath $HOME -batch -report.copyicons -report.depth 10 -report.html %b.html -runlog %b.qrz"

options=
if [ x$1 = xmanual ] ; then
   mkdir -p tmp
   options="$common_options $manual_options"
else
   options="$common_options $moreno_options"
fi

qftestJUI $options acscommandcenter.qft
echo $?
