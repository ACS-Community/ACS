if [ -f ../config/AES2IDL.xslt ]
then
   IDL_XSLT=../config/AES2IDL.xslt
else
   # Now I look for in the other dirs
   result=`searchFile /config/AES2IDL.xslt`
   if [ "$result" != "#error#" ]
   then
      IDL_XSLT=$result/config/AES2IDL.xslt
   fi
fi

java -cp "$ACSROOT/lib/xalan.jar${PATH_SEP}$ACSROOT/lib/xalan_serializer.jar" org.apache.xalan.xslt.Process -XSL $IDL_XSLT -IN $1 -OUT $2
