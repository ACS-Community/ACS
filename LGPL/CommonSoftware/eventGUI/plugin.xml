<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="alma.acs.eventbrowser.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Event Browser Perspective"
            class="alma.acs.eventbrowser.Perspective"
            id="alma.acs.eventbrowser.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="alma.acs.eventbrowser"
            class="alma.acs.eventbrowser.views.ChannelTreeView"
            icon="icons/sample.gif"
            id="alma.acs.eventbrowser.views.channeltree"
            name="ChannelTree"
            restorable="true">
      </view>
      <view
            category="alma.acs.eventbrowser"
            class="alma.acs.eventbrowser.views.ServiceSummaryView"
            icon="icons/sample.gif"
            id="alma.acs.eventbrowser.views.servicesummary"
            name="Service Summary">
      </view>
      <view
            allowMultiple="true"
            class="alma.acs.eventbrowser.views.EventListView"
            icon="icons/sample.gif"
            id="alma.acs.eventbrowser.views.eventlist"
            name="Event List"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               id="alma.acs.eventbrowser.views.ServiceSummary"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="alma.acs.eventbrowser.preferences.MonitoringPreferencePage"
            id="alma.acs.eventbrowser.preferences.MonitoringPreferencePage"
            name="Monitoring Preferences">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="alma.acs.eventbrowser.preferences.PreferenceInitializer">
      </initializer>
   </extension>
      <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="alma.acs.eventbrowser.views.EventData"
            class="alma.acs.eventbrowser.views.EventPropertiesSourceAdapterFactory">
         <adapter
               type="org.eclipse.ui.views.properties.IPropertySource">
         </adapter>
      </factory>
   </extension>
      <extension
            point="org.eclipse.ui.startup">
         <startup></startup>
      </extension>
      <extension
            id="product"
            point="org.eclipse.core.runtime.products">
         <product
               application="eventGUI.application"
               name="ALMA ACS Event Browser">
            <property
                  name="appName"
                  value="ALMA ACS Event Browser">
            </property>
         </product>
      </extension>

</plugin>
