<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="alma.acs.alarmsanalyzer.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="alma.acs.alarmsanalyzer.Perspective"
            id="alma.acs.alarmsanalyzer.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="alma.acs.alarmsanalyzer.view.MFAView"
            id="alma.acs.alarmsanalyzer.view"
            name="MostFrequent"
            restorable="true">
      </view>
      <view
            class="alma.acs.alarmsanalyzer.view.StaleView"
            id="alma.acs.alarmsanalyzer.staleview"
            name="Stale"
            restorable="true">
      </view>
      <view
            class="alma.acs.alarmsanalyzer.view.ChatteringView"
            id="alma.acs.alarmsanalyzer.chatteringview"
            name="Chattering"
            restorable="true">
      </view>
      <view
            class="alma.acs.alarmsanalyzer.view.TenMinutesView"
            id="alma.acs.alarmsanalyzer.tenminutesview"
            name="Alarms per 10 min"
            restorable="true">
      </view>
      <view
            class="alma.acs.alarmsanalyzer.view.AlarmFloodView"
            id="alma.acs.alarmsanalyzer.alarmflood"
            name="Alarm flood"
            restorable="true">
      </view>
      <view
            class="alma.acs.alarmsanalyzer.view.StatisticView"
            id="alma.acs.alarmsanalyzer.statistics"
            name="Statistics"
            restorable="true">
      </view>
      <view
            class="alma.acs.alarmsanalyzer.view.AnnunciatedView"
            id="alma.acs.alarmsanalyzer.annunciated"
            name="Annunciated"
            restorable="true">
      </view>
      <view
            class="alma.acs.alarmsanalyzer.view.SuppressedView"
            id="alma.acs.alarmsanalyzer.suppressed"
            name="Suppressed"
            restorable="true">
      </view>
      <view
            class="alma.acs.alarmsanalyzer.view.LostView"
            id="alma.acs.alarmsanalyzer.lost"
            name="Lost sources"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="false"
               id="alma.acs.alarmsanalyzer.view"
               minimized="false"
               moveable="true"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="false"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="false"
               id="alma.acs.alarmsanalyzer.staleview"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="alma.acs.alarmsanalyzer.view"
               showTitle="true"
               visible="true">
         </view>
         <view
               closeable="false"
               id="alma.acs.alarmsanalyzer.chatteringview"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="alma.acs.alarmsanalyzer.staleview"
               visible="true">
         </view>
         <view
               closeable="false"
               id="alma.acs.alarmsanalyzer.statistics"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="alma.acs.alarmsanalyzer.chatteringview"
               visible="true">
         </view>
         <view
               closeable="false"
               id="alma.acs.alarmsanalyzer.annunciated"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="alma.acs.alarmsanalyzer.statistics"
               visible="true">
         </view>
         <view
               closeable="false"
               id="alma.acs.alarmsanalyzer.suppressed"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="alma.acs.alarmsanalyzer.annunciated">
         </view>
         <view
               closeable="false"
               id="alma.acs.alarmsanalyzer.lost"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="alma.acs.alarmsanalyzer.suppressed"
               visible="true">
         </view>
         <view
               closeable="false"
               id="alma.acs.alarmsanalyzer.tenminutesview"
               minimized="false"
               moveable="true"
               relationship="bottom"
               relative="alma.acs.alarmsanalyzer.view"
               visible="true">
         </view>
         <view
               closeable="false"
               id="alma.acs.alarmsanalyzer.alarmflood"
               minimized="false"
               moveable="true"
               relationship="right"
               relative="alma.acs.alarmsanalyzer.tenminutesview"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="alma.acs.alarmsanalyzer.command.connectacs"
                  label="Connect to ACS"
                  style="push"
                  tooltip="Connect to ACS">
            </command>
            <command
                  commandId="alma.acs.alarmsanalyzer.command.connectdb"
                  label="Connect to database"
                  style="push"
                  tooltip="Connect to the database">
            </command>
            <separator
                  name="AlarmsAnalyzer.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="alma.acs.alarmsanalyzer.command.exit"
                  label="E&amp;xit"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="alma.acs.alarmsanalyzer.toolbar"
               label="Alarm profiler toolbar">
            <command
                  commandId="alma.acs.alarmsanalyzer.command.save"
                  icon="icons/save.gif"
                  label="Save statistics"
                  style="push"
                  tooltip="Save the statistics">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="alma.acs.alarmsanalyzer.application"
            name="Alarm profiler RCP">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
         <property
               name="appName"
               value="Alarm profiler RCP">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="alma.acs.alarmsanalyzer.command.ConnectToACSHandler"
            id="alma.acs.alarmsanalyzer.command.connectacs"
            name="Connect to ACS">
      </command>
      <command
            defaultHandler="alma.acs.alarmsanalyzer.command.ConnectToDBHandler"
            id="alma.acs.alarmsanalyzer.command.connectdb"
            name="Connect to DB">
      </command>
      <command
            defaultHandler="alma.acs.alarmsanalyzer.command.ExitHandler"
            id="alma.acs.alarmsanalyzer.command.exit"
            name="Exit">
      </command>
      <command
            defaultHandler="alma.acs.alarmsanalyzer.command.SaveHandler"
            id="alma.acs.alarmsanalyzer.command.save"
            name="Save">
      </command>
   </extension>

</plugin>
