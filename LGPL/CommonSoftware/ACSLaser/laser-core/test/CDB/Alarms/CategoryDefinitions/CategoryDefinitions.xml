<category-definitions xmlns="urn:schemas-cosylab-com:Alarm:1.0"
                      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                      xsi:schemaLocation="urn:schemas-cosylab-com:Alarm:1.0 ../../../../config/CDB/schemas/laser-definition.xsd">
	<categories-to-create>
		<category-definition path="ROOT">
			<description>
				The one-and-only root-level category.
			</description>
		</category-definition>
		<category-definition path="ROOT:SOURCE">
			<description>
				The category for all alarm states that relate to test components.
			</description>
		</category-definition>
		<category-definition path="ROOT:CURRENT">
			<description>
				The category for all alarm states that relate to 'current' properties.
			</description>
		</category-definition>
		<category-definition path="ROOT:SOURCE:PS">
			<description>The category for the PS</description>
		</category-definition>
	</categories-to-create>
</category-definitions>
