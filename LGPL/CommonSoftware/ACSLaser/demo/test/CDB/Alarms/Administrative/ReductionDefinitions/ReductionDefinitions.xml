<reduction-definitions 
   xmlns="urn:schemas-cosylab-com:AcsAlarmSystem:1.0"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<links-to-create>

		<reduction-link type="NODE">
		<parent>
		<alarm-definition fault-family="PIPELINE"
		fault-member="BadPointingResult" fault-code="1"/>
		</parent>
		<child>
		<alarm-definition fault-family="PIPELINE"
		fault-member="BadPointingResult" fault-code="1"/>
		</child>
		</reduction-link>
		
	</links-to-create>

	<thresholds>
		<threshold value="2">
			<alarm-definition fault-family="PIPELINE" fault-member="BadPointingResult" fault-code="1"/>
		</threshold>
	</thresholds>
</reduction-definitions>

