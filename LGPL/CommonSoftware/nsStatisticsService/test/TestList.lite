SOURCE nsStatisticsServiceTATEnvironment
PROLOGUE acsutilTATPrologue -l

# Check frequency 
1	Test1	"acsutilTATTestRunner nsStatistics -f 500" "@SLEEP 5" "acsutilTATTestRunner TSupplier.py 100 10 1" "acsutilTATTestRunner TConsumer.py 10 1" "@SLEEP 5" "acsutilTATTestRunner stopNsStats" "@SLEEP 2" "acsutilTATTestRunner NsStatisticsTest.py 1"

# Check selected service by creating a couple of channels in DefaultNotifyService
2	Test2	"acsutilTATTestRunner nsStatistics -f 1000 -add \"DefaultNotifyService\"" "@SLEEP 5" "acsutilTATTestRunner TSupplier.py 100 10 1 2" "acsutilTATTestRunner TConsumer.py 10 1 2" "@SLEEP 5" "acsutilTATTestRunner stopNsStats" "@SLEEP 2" "acsutilTATTestRunner NsStatisticsTest.py 2"

# Check selected service and channel by creating a couple of channels in DefaultNotifyService
3	Test3	"acsutilTATTestRunner nsStatistics -f 500 -add \"DefaultNotifyService:testNsStatsChannel2\"" "@SLEEP 5" "acsutilTATTestRunner TSupplier.py 100 10 1 2" "acsutilTATTestRunner TConsumer.py 10 1 2" "@SLEEP 5" "acsutilTATTestRunner stopNsStats" "@SLEEP 2" "acsutilTATTestRunner NsStatisticsTest.py 3"

# Check threshold oldest event
4	Test4	"acsutilTATTestRunner nsStatistics -f 500 -toe 0" "@SLEEP 5" "acsutilTATTestRunner TSupplier.py 100 10 1 2" "acsutilTATTestRunner TConsumer.py 10 1 2" "@SLEEP 5" "acsutilTATTestRunner stopNsStats" "@SLEEP 2" "acsutilTATTestRunner NsStatisticsTest.py 4"

# Check threshold queue size 
5	Test5	"acsutilTATTestRunner nsStatistics -f 500 -tqs 0" "@SLEEP 5" "acsutilTATTestRunner TSupplier.py 100 10 1 2" "acsutilTATTestRunner TConsumer.py 10 1 2" "@SLEEP 5" "acsutilTATTestRunner stopNsStats" "@SLEEP 2" "acsutilTATTestRunner NsStatisticsTest.py 5"

EPILOGUE acsutilTATEpilogue

