26 testArchiveSupplier    "acsutilTATTestRunner acspyTestArchiveConsumer 15 11" "@SLEEP 3" "acsutilTATTestRunner acspyTestArchiveSupplier"  "@SLEEP 13"
27 testLoggingConsumer    "acsutilTATTestRunner acspyTestLoggingConsumer 15"
