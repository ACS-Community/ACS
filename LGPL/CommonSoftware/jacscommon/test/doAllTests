export ACS_TMP=$PWD/tmp
cdbTATPrologue
CDB_PORT=`sed -n 1'p' $ACS_TMP/.cdbport`
export DAL_REFERENCE=corbaloc\:\:$HOST\:$CDB_PORT/CDB
export ACS_INSTANCE=`cat $ACS_TMP/acs_instance`
acsStartJava -Dabeans.home=./Config junit.textui.TestRunner abeans.pluggable.acs.cdb.dal.test.CDBDALTest
acsStartJava -Dabeans.home=./Config junit.textui.TestRunner abeans.pluggable.acs.logging.test.LoggingLevelTest
acsStartJava -Dabeans.home=./Config junit.textui.TestRunner abeans.pluggable.acs.logging.test.LoggingFormatterTest
cdbTATEpilogue
