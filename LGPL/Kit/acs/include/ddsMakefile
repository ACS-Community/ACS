

../object/%.ddds: 
	- @echo "== DDS Dependencies: $@"
	$(AT)mkdir -p ../object
	$(AT)acsMakeDDSDependencies $(*F) >../object/$*.ddds

ifneq "$(strip $(DDS_FILES))" "" 
include $(addprefix ../object/, $(addsuffix .ddds, $(DDS_FILES)))
endif


TMP_DEP_DDS      := $(addprefix do_fake_,     $(DDS_FILES))
TMP_CLEAN_DDS    := $(addprefix clean_,       $(DDS_FILES))
TMP_INSTALL_DDS  = $(addprefix install_dds_, $(DDS_FILES))

.PHONY: do_dds clean_dds install_dds
do_dds: $(TMP_DEP_DDS) 

clean_dds: $(TMP_CLEAN_DDS)
install_dds: $(TMP_INSTALL_DDS)

ifneq ($(strip  $(DDS_FILES)),)
  ALL_TARGET     := $(ALL_TARGET)     do_dds
  CLEAN_TARGET   := $(CLEAN_TARGET)   clean_dds
#
# the following is commented out since
# currently the make install is delegated
# to an external make call
#
#	  INSTALL_TARGET := $(INSTALL_TARGET) install_dds
endif
