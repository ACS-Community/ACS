        ifeq ($(findstring $(ACS_CXX_MAJOR_VERSION),1 2 3),$(ACS_CXX_MAJOR_VERSION))
               ACS_GXX_4_OR_BETTER := 0
        else
               ACS_GXX_4_OR_BETTER := 1
        endif
        .LIBPATTERNS = lib%.dll lib%.dll.a lib%.a
        TAO_IDLFLAGS += -Gxhst -Gxhsk -Gxhsv -Gxhex -Gxhcn
