<LogDefinitionType 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="Alma/ACSLogTS"
	name="SampleLog" 
	type="10"
	shortDescription="Example LogDefinitionType"
	description="Longer description of the sample LogDefinitionType"
	URL="http://someurl.org"
	_prefix="alma"
        xsi:schemaLocation="Alma/ACSLogTS ACSLogTS.xsd">
	
	<!--xsi:noNamespaceSchemaLocation="ACSLogTS.xsd"-->
	<LogDefinition
		logName="logWithoutMembers"
		shortDescription="Log without members"
		description="This is a sample log without members"
		URL="http://someurl.org"
		priority="INFO"
		audience="Big Brother">
	</LogDefinition>
	<LogDefinition
		logName="logWithMembers"
		shortDescription="Log with members"
		description="This is a somewhat more complex log using members"
		URL="http://someurl.org"
		priority="WARNING"
		audience="You">
		<Member name="someMember"
			type="string"
			description="member description"/>
	</LogDefinition>
</LogDefinitionType>

