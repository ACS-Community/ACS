/*
 * Adjust name-space information.
 */
#if defined(_ALL_SOURCE)
#    undef _POSIX_C_SOURCE
#endif

#if defined(_XOPEN_SOURCE)
#    undef _POSIX_C_SOURCE
#endif
#undef _POSIX_SOURCE
#undef _POSIX_C_SOURCE
  
/* for Thomas Ebert re. ipc.h AH 29/09/99. BGI:Modified in _GNU_SOURCE 06/10/99 */
#ifndef __cplusplus
#define _GNU_SOURCE
#endif

