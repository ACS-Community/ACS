<PubSubInfrastructureSpec>

  <TestDescription>
    A simple pub-sub setup for basic tests. 
    It runs publishers and subscribers for a fixed time, independently of the number of events that are sent or received.
    See the 'Termination' element used, as opposed to 'numberOfEvents' attributes.
  </TestDescription>
  
  <Container containerName="publisherContainer-1" implLang="java" />
  <Container containerName="publisherContainer-2" implLang="java" />
  <Container containerName="subscriberContainer" implLang="java" hostName="myStaticallySetHostName" />
  
  
  <Publisher containerName="publisherContainer-1" componentName="Pub-1" eventPeriodMillis="48" >
    <NC>CONTROL_REALTIME</NC>
    <EventName>LightweightMountStatusData</EventName>
  </Publisher>
  
  <Publisher containerName="publisherContainer-2" componentName="PubMaxSpeed" >
    <NC>MY_OTHER_NC</NC>
    <EventName>LightweightMountStatusData</EventName>
  </Publisher>
  
  
  <Subscriber containerName="subscriberContainer" componentName="Sub-1" processingDelayMillis="2">
    <NC>CONTROL_REALTIME</NC>
    <EventName>LightweightMountStatusData</EventName>
    <EventName>MountStatusData</EventName>
  </Subscriber>

  <Subscriber containerName="subscriberContainer" componentName="Sub-2">
    <NC>MY_OTHER_NC</NC>
    <EventName>LightweightMountStatusData</EventName>
  </Subscriber>

  <Termination timeout="10" timeUnit="MINUTES" />
  
</PubSubInfrastructureSpec>
