# Should be set to capture container daemon output locally, but does not work from here it seems.
# set env(ACSDATA) [pwd] 

set ACS_TMP [file join [pwd] tmp]
set env(ACS_TMP) $ACS_TMP

# We don't really need a special CDB yet, but acsutilTATPrologue does not accept the default $ACS_CDB
# which is why we have a basic local version of it.
set env(ACS_CDB) [pwd] 

# Produce low-level logs for all acsStart.log, all_logs.xml, and test .out.orig files. 
# The latter will be thinned out by TestList.grep to keep the ref files maintainable.
set env(ACS_LOG_STDOUT) 1
set env(ACS_LOG_CENTRAL) 3

#set env(ACS_LOG_FILE) [file join $ACS_TMP log_cache.dat]

